@model CombinedClasses

<head>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-success text-white">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-White py-3" style="font-size:xx-large">Log In Form</h2>
            </div>
        </div>
    </div>
   <div class="card-body bg-info p-4">
<partial name="_Notifications" />
<form method="post" action="/Access/LogIn">
<div class="card shadow border-0 mt-5 col-md-13">
    <div class="mb-3 row p-3">
      <div class="col-6 col-md">

         <label asp-for="RegisterUser!.Id" class="p-0" style="font-size:x-large"></label>
         <input asp-for="RegisterUser!.Id" class="form-control" style="font-size:large"  />
         <span asp-validation-for="RegisterUser!.Id" class="text-danger"></span>
        
      
         <label asp-for="RegisterUser!.IdCardNum" class="p-0" style="font-size:x-large"></label>
         <input asp-for="RegisterUser!.IdCardNum" class="form-control" style="font-size:large" />
         <span asp-validation-for="RegisterUser!.IdCardNum" class="text-danger"></span>
      </div>
    </div>
 </div>
    <div class="card shadow border-0 mt-5 col-md-13">
       <div class="mb-0 row p-3">
         <div class="col-6 col-md-3">
             <button type="submit" class="btn btn-primary form-control" style="font-size:large">LogIn</button>
         </div>
         <div class="col-6 col-md-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary border form-control" style="font-size:large">Back to Home</a>
         </div>
       </div>
     </div>   
</form>
</div>
</div>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}