@model CombinedClasses
<head>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>

@{
    bool checkAdminRights= false;
    bool checkUser = false;

    checkAdminRights = !Model.User!.AdminRights ? false : true;
    checkUser = Model.User.CurrentUser == 0 ? false : true;
}

<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-success text-white">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-White py-3" style="font-size:xx-large">Registration Form</h2>
            </div>
        </div>
    </div>
    <div class="card-body bg-info p-4">
<partial name="_Notifications" />
<form method="post" >
  <div class="card shadow border-0 mt-5 col-md-13">
      <div class="mb-3 row p-3">
         <div class="col-6 col-md">
        <div class="mb-3 row p-1">
            <label asp-for="@Model.RegisterUser!.IdCardNum" class="p-0" style="font-size:x-large"></label>
            <input asp-for="@Model.RegisterUser!.IdCardNum" class="form-control" style="font-size:large" />
            <span asp-validation-for="@Model.RegisterUser!.IdCardNum" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.RegisterUser!.FullName" class="p-0" style="font-size:x-large"></label>
            <input asp-for="@Model.RegisterUser!.FullName" class="form-control" style="font-size:large" />
            <span asp-validation-for="@Model.RegisterUser!.FullName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.RegisterUser!.Address" class="p-0" style="font-size:x-large"></label>
            <input asp-for="@Model.RegisterUser!.Address" class="form-control" style="font-size:large" />
            <span asp-validation-for="@Model.RegisterUser!.Address" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.RegisterUser!.ContactNumber" class="p-0" style="font-size:x-large"></label>
            <input asp-for="@Model.RegisterUser!.ContactNumber" class="form-control" style="font-size:large" />
            <span asp-validation-for="@Model.RegisterUser!.ContactNumber" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.RegisterUser!.EmailAddress" class="p-0" style="font-size:x-large"></label>
            <input asp-for="@Model.RegisterUser!.EmailAddress" class="form-control" style="font-size:large" />
            <span asp-validation-for="@Model.RegisterUser!.EmailAddress" class="text-danger"></span>
        </div>
     </div>
   </div>
 </div>
        @if (checkUser && checkAdminRights)
        {
           <div class="card shadow border-0 mt-5 col-md-13">            
                <div class="mb-3 row p-4" style="font-size:x-large">Set As Administrator
                    <div class="form-check">
                     <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" style="font-size:x-large" value="true" checked="">
                        <label class="form-check-label" for="optionsRadios1" style="font-size:x-large">Yes
                        </label>
                    </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios2" style="font-size:x-large" value="false">
                     <label class="form-check-label" for="optionsRadios2" style="font-size:x-large">No
                        </label>
                </div>
                </div>
           </div>    
        }
    
   <div class="card shadow border-0 mt-5 col-md-13">
     <div class="mb-0 row p-3">
        <div class="col-6 col-md-3">
           <button type="submit" class="btn btn-primary form-control" style="font-size:large">Submit</button>
        </div>
           <div class="col-6 col-md-3">
              <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary border form-control" style="font-size:large">Back to Home</a>
       </div>
     </div>
   </div>
           
    
</form>
    </div>
</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}


