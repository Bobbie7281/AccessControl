@model CombinedClasses

<head>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>

<partial name="_Notifications" />
<form method="post" action="/Access/Download">
    @*<input asp-for="@Model.Id" hidden />*@
    <div class="border p-3 mt-5">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit User Details
            </h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
          <div class="col-6 col-md-1">
                <label for="User Input" class="p-0" style="font-size:large">Enter User ID: </label>
          </div>
          <div class="col-6 col-md-2"> 
              <input type="text" id="User Input" name="Id" class="form-control"/>
              <span asp-validation-for="@Model.RegisterUser!.Id" class="text-danger"></span>
          </div>
          <div class="col-6 col-md-3">
                <button type"submit" class="btn btn-outline-info btn-primary form-control" style="font-size:large"><i class="bi bi-download"></i> Download Data</button>
          </div>
       </div>
       </div>
</form>
<form method="post" action="/Access/EditInfo">
    <input asp-for="@Model.RegisterUser!.Id" hidden />

        <div class="mb-3 row p-1">
        <label asp-for="@Model.RegisterUser!.IdCardNum" class="p-0" style="font-size:x-large"></label>
        <input asp-for="RegisterUser!.IdCardNum" value="@Model.RegisterUser!.IdCardNum" class="form-control" style="font-size:large" />
        </div>

    <div class="mb-3 row p-1">
        <label asp-for="@Model.RegisterUser.FullName" class="p-0" style="font-size:x-large"></label>
        <input asp-for="RegisterUser!.FullName" value="@Model.RegisterUser.FullName" class="form-control" style="font-size:large" />
       
        </div>
    <div class="mb-3 row p-1">
        <label asp-for="@Model.RegisterUser.Address" class="p-0" style="font-size:x-large"></label>
        <input asp-for="RegisterUser!.Address" value="@Model.RegisterUser.Address" class="form-control" style="font-size:large" />
        
        </div>
    <div class="mb-3 row p-1">
        <label asp-for="@Model.RegisterUser.ContactNumber" class="p-0" style="font-size:x-large"></label>
        <input asp-for="RegisterUser!.ContactNumber" value="@Model.RegisterUser.ContactNumber" class="form-control" style="font-size:large" />
        
        </div>
    <div class="mb-3 row p-1">
        <label asp-for="@Model.RegisterUser.EmailAddress" class="p-0" style="font-size:x-large"></label>
        <input asp-for="RegisterUser!.EmailAddress" value="@Model.RegisterUser.EmailAddress" class="form-control" style="font-size:large" />
    </div>
    

    @if (Model.User!.AdminRights)
    {
        @if (Model.RegisterUser!.Administrator)
        {
            <div class="mb-3 row p-1" style="font-size:x-large">Set As Administrator</div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" style="font-size:x-large" value="true" checked="">
                <label class="form-check-label" for="optionsRadios1" style="font-size:x-large">
                    Yes
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios2" style="font-size:x-large" value="false">
            <label class="form-check-label" for="optionsRadios2" style="font-size:x-large">
                No
            </label>
            </div>
        }
        else
        {
            <div class="mb-3 row p-1" style="font-size:x-large">Set As Administrator</div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" style="font-size:x-large" value="true">
                <label class="form-check-label" for="optionsRadios1" style="font-size:x-large">
                    Yes
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios2" style="font-size:x-large" value="false" checked="">
                <label class="form-check-label" for="optionsRadios2" style="font-size:x-large">
                    No
                </label>
            </div>
        }
    }
        <div class="row">
        @if (Model.ButtonSync!.Download)
        {
            <div class="col-6 col-md-2">
                <button type"submit" class="btn btn-success form-control" style="font-size:x-large"><i class="bi bi-pencil-square"></i> Save Data</button>
            </div>
        }
    
            <div class="col-6 col-md-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-light border form-control" style="font-size:x-large"><i class="bi bi-house-door-fill"></i> Back to Home</a>
            </div>
        </div>
</form>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}