@model CombinedClasses

<head>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>

<partial name="_Notifications" />
<form method="post" action="/Access/Download">
    @*<input asp-for="@Model.Id" hidden />*@
    <div class="border p-3 mt-5">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit User Details
            </h2>
            <hr />
        </div>

       <div class="mb-1 row p-4">
          <div class="col-6 col-md-1">
              <label for="User Input" class="p-0">Enter User ID: </label>
          </div>
          <div class="col-6 col-md-2"> 
              <input type="text" id="User Input" name="Id" class="form-control"/>
              <span asp-validation-for="@Model.RegisterUser!.Id" class="text-danger"></span>
          </div>
          <div class="col-6 col-md-3">
                <button type"submit" class="btn btn-outline-info btn-primary form-control"><i class="bi bi-download"></i> Download Data</button>
          </div>
       </div>
       </div>
</form>
<form method="post" action="/Access/EditInfo">
    <input asp-for="@Model.RegisterUser!.Id" hidden />

        <div class="mb-1 row p-4">
        <label asp-for="@Model.RegisterUser!.IdCardNum" class="p-0"></label>
        <input asp-for="RegisterUser!.IdCardNum" value="@Model.RegisterUser!.IdCardNum" class="form-control" />
        </div>

        <div class="mb-1 row p-4">
        <label asp-for="@Model.RegisterUser.FullName" class="p-0"></label>
        <input asp-for="RegisterUser!.FullName" value="@Model.RegisterUser.FullName" class="form-control" />
       
        </div>
        <div class="mb-1 row p-4">
        <label asp-for="@Model.RegisterUser.Address" class="p-0"></label>
        <input asp-for="RegisterUser!.Address" value="@Model.RegisterUser.Address" class="form-control" />
        
        </div>
        <div class="mb-1 row p-4">
        <label asp-for="@Model.RegisterUser.ContactNumber" class="p-0"></label>
        <input asp-for="RegisterUser!.ContactNumber" value="@Model.RegisterUser.ContactNumber" class="form-control" />
        
        </div>
        <div class="mb-1 row p-4">
        <label asp-for="@Model.RegisterUser.EmailAddress" class="p-0"></label>
        <input asp-for="RegisterUser!.EmailAddress" value="@Model.RegisterUser.EmailAddress" class="form-control" />
       
        </div>

        <div class="row">
        @if (Model.ButtonSync!.Download)
        {
            <div class="col-6 col-md-2">
                <button type"submit" class="btn btn-outline-info btn-primary form-control"><i class="bi bi-pencil-square"></i> Save Data</button>
            </div>
        }
    
            <div class="col-6 col-md-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary border form-control"><i class="bi bi-house-door-fill"></i> Back to Home</a>
            </div>
        </div>
</form>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}