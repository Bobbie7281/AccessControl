@model CombinedClasses
<head>
    @*<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>*@
</head>
<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-success text-white">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-White py-3" style="font-size:xx-large"> Delete User</h2>
            </div>
        </div>
    </div>
<partial name="_Notifications" />
<div class="card-body bg-info">
<form method="post" action="/Access/Delete User">
    <input asp-for="@Model.RegisterUser!.Id" hidden />
    
    <div class="card shadow border-0 mt-5">
        <div class="mb-3 row p-0">
            <div class="col-6 text-lg-start py-0 ">
                <label asp-for="@Model.RegisterUser!.Id" class="p-3" style="font-size:xx-large"></label>
                <input type="text" id="Id" name="Id" class="m-2 form-control"/>
                <span asp-validation-for="@Model.RegisterUser!.Id" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="card shadow border-0 mt-5">
        <div class="mb-3 row p-3">
            <div class="col-6 col-md-3">
                <button type"submit" class="btn btn-danger btn-secondary form-control" style="font-size:larger"><i class="bi bi-trash"></i> Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary border form-control" style="font-size:larger"><i class="bi bi-house-door-fill"></i> Back to Home</a>
            </div>
        </div>
     </div>
  
</form>
</div>
</div>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}