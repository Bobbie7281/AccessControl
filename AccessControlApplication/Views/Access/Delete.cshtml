</head>
<partial name="_Notifications" />
<form method="post" action="/Access/Delete User">
    <input asp-for="@Model.RegisterUser!.Id" hidden />
    <div class="border p-3 mt-5">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete User
            </h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.RegisterUser!.Id" class="p-0"></label>
            <input type="text" id="Id" name="Id" class="form-control" />
            <span asp-validation-for="@Model.RegisterUser!.Id" class="text-danger"></span>
        </div>

        <div Class="row">
            <div class="col-6 col-md-2">
                <button type"submit" class="btn btn-danger form-control"><i class="bi bi-trash"></i> Delete</button>
            </div>
            <div class="col-6 col-md-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary border form-control"><i class="bi bi-house-door-fill"></i> Back to Home</a>
            </div>
        </div>
    </div>
</form>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}